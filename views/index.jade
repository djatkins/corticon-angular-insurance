doctype html
html(ng-app="myApp")
  head
    meta(charset='utf8')
    base(href='/')
    title Health Insurance
    link(rel='stylesheet', href='/css/app.css')
  body
    span(ng-controller='AppCtrl')
      div(ng-show='pane==0')
        h2 Basic Information
        form(name='basic')
          h4 Zip Code:    
            input(type='text', ng-model='zip', pattern='[0-9]{5,5}', required)
          h4 Coverage Start Date:
            input(type='date', ng-model='date', placeholder="yyyy-MM-dd", required)
          h4 Number of Family Members
            input(type='text', ng-model='familySize', pattern='[0-9]{1,2}', required)
          button(ng-click='next()', ng-disabled='basic.$invalid') Next
      div(ng-show='pane==1')
        h2 Details on Family Members
        form(name='family', ng-model='familyInfo')
          span(ng-repeat='i in getNumber()')
            span(ng-show='!$first')
              h3 Family Member {{i}}
            span(ng-show='$first')
              h3 Your Information
            h4 Date of Birth:
              input(type='date', ng-model='birth', placeholder="yyyy-MM-dd", required)
            h4 Tobacco use
              input(type='checkbox', ng-model='tobacco')
          button(ng-click='previous()') Back
          button(ng-click='next()', ng-disabled='family.$invalid') Next
      div(ng-show='pane==2')
        h2 Income
        form(name='income')
          h4 Salary (approximate is ok)
            input(type='text', ng-model='salary', pattern='[0-9]{1,12}', required)
          button(ng-click='previous()') Back
          button(ng-click='next()', ng-disabled='income.$invalid') Next
      div(ng-show='pane==3')
        h2 Use Frequency
        form(name='details')
          h4 Estimated number of doctor visits a year
            input(type='text', ng-model='visits', pattern='[0-9]{1,2}', required)
          h4 Estimated number of prescriptions
            input(type='text', ng-model='prescriptions', pattern='[0-9]{1,2}', required)
          button(ng-click='previous()') Back
          button(ng-click='next()', ng-disabled='details.$invalid') Submit
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-rc.0/angular.min.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')